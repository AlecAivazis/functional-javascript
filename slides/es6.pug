    section
        h2 Variable Declaration
        pre
            code.
                    // whatever you want, hoisted, functionally scoped
                    var asdf = 'asdf'
                    // cannot be re-declared, block scoped
                    let foo = 'bar'
                    // cannot be changed (some times), block scoped
                    const bar = 'baz'
    section
        h2 Anonymous Functions
        div(style="display: flex; flex-direction: row;")
            pre
                code.javascript(data-noescape).
                    // does this act like a var, let,
                    // or const?
                    function myFunc(name) {
                        return 'Hello ' + name
                    }
            pre
                code.javascript(data-noescape).

                    // now we can decide!
                    const myNewFunc = (name) => (
                        'Hello ' + name
                    )

                    // sometimes implicit returns are bad
                    const myNewestFunc = (name) => {
                        return 'Hello ' + name
                    }
    section
        h2 destructuring
        div(style="display: flex; flex-direction: row;")
            pre
                code.javascript.
                    // the old way
                    var data = {'foo': 'bar'}
                    // grab the foo entry
                    var foo = data.foo


                    function myFunc(args) {
                        console.log(args.foo)
                    }
                    myFunc({foo: 'bar'})

            pre
                code.javascript.
                    const data = {'foo': 'bar'}
                    // grab the foo entry
                    const {foo} = data


                    function myFunc({foo}) {
                        console.log(foo)
                    }
                    myFunc({foo: 'bar'})

    section
        h2 spread
        pre
            code.javascript.
                const mockData = {
                    foo: 'bar',
                }
        pre
            code.javascript.

                const newObj = {
                    'bar': 'baz',
                    ...mockData,
                }

                /*
                    newObj == {
                        bar: 'baz',
                        foo: 'bar'
                    }
                */
